<div class="container mt-5">
   <div class="mb-3">
    <%= link_to '< Restaurants', restaurants_path, class: 'btn-light opacity-25 text-decoration-none' %>
  </div>
  <h1>Add Review for <%= @restaurant.name %></h1>
  <!-- add the action ( post /restaurants/22/reviews) -->
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit 'Add', class: 'btn btn-light mt-2'%>
  <% end %>
</div>
